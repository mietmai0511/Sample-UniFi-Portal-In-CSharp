@using System.Configuration
@model  UniFiPortal.Models.WifiLoginModel

@{
    Layout = null;
    ViewBag.Title = "Wifi Login";
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/jquery.backstretch.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <style type="text/css">
        @@media (max-width: 400px) {
            .logo-name {
                width: 50%;
                margin: 0 auto;
            }
        }
    </style>
</head>

<body>
    <div class=" middle-box text-center loginscreen  animated fadeInDown className gray-bg p-lg" style="border-radius: 8px;">
        <div>
            @using (Html.BeginForm("Index", "Home", new { }, FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "formSumit" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.Ap)
                @Html.HiddenFor(x => x.Ssid)
                @Html.HiddenFor(x => x.Url)
                @Html.HiddenFor(x => x.T)
                <div class="m-b">

                    <h1 class="logo-name">
                        <img src="~/Content/Image/logo.png" style="width: 100%" alt="Logo" />
                    </h1>

                </div>
                if (ViewBag.Message != null)
                {
                    <div class="form-group">
                        <p class="alert alert-danger">
                            @ViewBag.Message
                        </p>
                    </div>
                }
                @Html.ValidationSummary(true)
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                    @Html.TextBoxFor(m => m.Fullname, "", new { @class = "form-control", @required = true, @placeholder = "Full name" })
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @required = true, @placeholder = "Email" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Wifi login" class="btn btn-success block full-width m-b" />
                </div>


            }
        </div>
        <p class="m-t"> <small>Welcome to Wifi Login website &copy; 2018</small> </p>

    </div>
</body>
</html>
<script type="text/javascript">
    $(document).on('invalid-form.validate', 'form', function () {
        var button = $(this).find('input[type="submit"]');
        setTimeout(function () {
            button.removeAttr('disabled');
        }, 1);
    });

    $(document).on('submit', 'form', function () {
        var button = $(this).find('input[type="submit"]');
        setTimeout(function () {
            button.attr('disabled', 'disabled');
        }, 0);
    });

    $(function () {
        $.backstretch("/Content/Image/background.jpg");

        $('.className').css({
            'position': 'absolute',
            'left': '50%',
            'top': '50%',
            'margin-left': function () { return -$(this).outerWidth() / 2 },
            'margin-top': function () { return -$(this).outerHeight() / 2 }

        });
       
    });
</script>